<p class="notice"><%= notice %></p>

<h2>Listing Courses</h2>

<table class="table-striped">

    <tr class="table-header">
      <th>Name</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>


    <% @courses.each do |course| %>
      <tr class="table-rows">
        <td><%= course.name %></td>
        <td><%= course.location %></td>
        <td><%= link_to 'Show', course, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_course_path(course), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>

</table>

<br>

<%= link_to 'New Course', new_course_path, class: "btn btn-link" %>
