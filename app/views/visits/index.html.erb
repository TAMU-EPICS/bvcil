

<h2>People at the BVCIL today</h2>

<table class="table-striped">

    <tr class="table-header">
      <td>Check-in time</td>
      <td>User Email</td>
      <td>Course</td>
      <td>Course Location</td>
      <td>Action</td>
    </tr>


    <% @visits.each do |visit| %>
      <% user = User.find_by_id(visit.user_id)
        course = Course.find_by_id(visit.course_id)
      %>
      <tr class="table-rows">
        <td><%= user.current_sign_in_at %></td>
        <td><%=user.email%></td>
        <td><%=course.name%></td>
        <td><%=course.location%></td>
        <td><%= link_to 'Destroy', visit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
</table>

<br>
<div class="row">
<%= link_to 'New Course', new_course_path, class:' col span 3-of-3 btn btn-1',style:'margin-left:10px;' %>
<%= link_to 'New Visit', new_visit_path, class: 'col span 1-of-3 btn btn-1', style:'margin-left:10px;' %>
<%= link_to "Sign out", destroy_user_session_path, method: :delete, class: 'col span 2-of-3 btn btn-1',style:'margin-left:10px;' %><br />

</div>
