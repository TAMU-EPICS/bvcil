<section class="login-form">
<div class="row">
    <h2>Log in</h2>
</div>
<div class="row">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "login-form") do |f| %>
<div class="row">
    <div class="col span-1-of-3">
    <%= f.label :email %>
  </div>
    <div class="col span-2-of-3">
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>
</div>

<div class="row">
  <div class="col span-1-of-3">
    <%= f.label :password %>
  </div>
    <div class="col span-2-of-3">
    <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
  </div>
</div>

  <div class="button-row">
    <div class="col span-1-of-3">
        <label>&nbsp; <br/></label>
    </div>
      <div class="col span-2-of-3">
    <%= f.submit "Log in", class:"btn btn-1" %>

    </div>

  </div>
</div>
<% end %>

<!-- <%= render "devise/shared/links" %> -->
</div>
</section>
